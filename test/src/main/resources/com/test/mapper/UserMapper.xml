<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.test.entity.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="gender" property="gender" />
        <result column="dial_code" property="dial_code" />
        <result column="mobile" property="mobile" />
        <result column="password" property="password" />
        <result column="icon" property="icon" />
        <result column="province_id" property="province_id" />
        <result column="city_id" property="city_id" />
        <result column="height" property="height" />
        <result column="profession" property="profession" />
        <result column="emotion" property="emotion" />
        <result column="weight" property="weight" />
        <result column="introduction" property="introduction" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, gender, dial_code, mobile, password, icon, province_id, city_id, height, profession, emotion, weight, introduction
    </sql>


    <sql id="Base_Alias_Column_List">
        user.id as user_id,user.name as user_name,user.gender as user_gender,user.dial_code as user_dial_code,user.mobile as user_mobile,user.password as user_password,user.icon as user_icon,user.province_id as user_province_id,user.city_id as user_city_id,user.height as user_height,user.profession as user_profession,user.emotion as user_emotion,user.weight as user_weight,user.introduction as user_introduction
    </sql>

    <resultMap id="selectSimpleResultMap" type="java.util.HashMap">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <association  property="user" columnPrefix="user_"
                      resultMap="com.test.mapper.UserMapper.BaseResultMap"/>
    </resultMap>

    <select id="selectSimple" resultMap="com.test.mapper.UserMapper.BaseResultMap" >
        select <include refid="com.test.mapper.UserMapper.Base_Column_List"/> from t_user
    </select>

    <select id="selectMapSimple" resultMap="com.test.mapper.UserMapper.selectSimpleResultMap" >
        select <include refid="com.test.mapper.UserMapper.Base_Alias_Column_List"/> from t_user as user
    </select>

</mapper>